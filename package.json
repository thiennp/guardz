{
  "name": "guardz",
  "version": "1.7.0",
  "description": "A simple and lightweight TypeScript type guard library for runtime type validation.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "prepublishOnly": "npm run build",
    "test": "npx jest",
    "docs": "typedoc --out docs src",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/*.ts --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check": "npm run lint && npm run format:check && npm run type-check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiennp/guardz.git"
  },
  "keywords": [
    "typescript",
    "type",
    "guard",
    "typeguard",
    "type-guard",
    "runtime",
    "validation",
    "check",
    "assert",
    "is",
    "intersection",
    "extension",
    "composite",
    "inheritance"
  ],
  "author": "Thien Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiennp/guardz/issues"
  },
  "homepage": "https://github.com/thiennp/guardz#readme",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "eslint": "^9.31.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.37.0"
  },
  "files": [
    "dist"
  ]
}
